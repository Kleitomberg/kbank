{% extends 'base.html.twig' %}

{% block title %}Abrir Conta!{% endblock %}


{% block stylesheets %}

<link rel="stylesheet" href="/assets/css/login.css">

{% endblock %}


{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}




<div class="login">
    <h3 class="text-center">Abrir nova conta</h3>

    {{ form_start(contaForm) }}
 

    <div class="row">

    <div class="col-md-6">
    <div class="form-group">
        {{ form_label(contaForm.agencia, 'Agencia', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(contaForm.agencia, {'attr': {'class': 'h-4 w-4 rounded border-gray border mr-2'}}) }}
        {{ form_errors(contaForm.agencia) }}
    </div>
</div>

    <div class="col-md-6">
        {{ form_label(contaForm.tipo, 'Tipo de conta', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(contaForm.tipo, {'attr': {'class': 'h-4 w-4 rounded border-gray border mr-2'}}) }}
        {{ form_errors(contaForm.tipo) }}

    </div>

</div>
    

    <button type="submit" class="btn btn-primary register-btn">Criar</button>

    <div class="mt-3">

    

    </div>


    {{ form_end(contaForm) }}
</div>

<script>
    swal({
        title: "Info!",
        text: "Identificamos que você já possui uma conta ativa. Deseja abrir uma nova conta?",
        icon: "info",
        button: "OK",
    });
</script>
{% endblock %}