{% extends 'dashbase.twig' %}

{% block title %}Painel do admin{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Admin Dashboard</h1>

               <div class="d-flex justify-content-between align-items-center mt-5 ">
                <h3 class="text-light">Agencias</h3>
                <a href="{{ path('app_admin_agencias_create') }}" class="btn btn-primary">Nova Agencia</a>

               

               </div>
                <table class="table text-light">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>numero</th>
                            <th>Gerente</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for agencia in agencias %}
                            <tr>
                                <td>{{ agencia.id }}</td>
                                <td>{{ agencia.codigo }}</td>                               
                                <td>
                                
                                 {%for gerente in gerentes %}                                    
    
                                        {% if gerente.id == agencia.id %}
    
                                            {{gerente.user}}
                                        
                                        {% endif %}
    
                                        
                                  

                                {% endfor %}
                                
                                </td>
                                
                                <td>
                                    <a href="">edit</a>
                                    <a href="">delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
            </div>
        </div>
    </div>

    

{% endblock %}
