                                <td>{{ conta.id }}</td>
                                <td>{{ conta.numero }}</td> 
                                  <td>{{ conta.usuario }}</td> 
                                    <td>

                                    {% if conta.active == 1 %}
                                        Ativa
                                    {% else %}
                                       Inativa
                                    {% endif %}
                                    
                                    </td>

                                    <td>
                                    {{ conta.tipo}}

                                    </td>
                                                                   
                                
                                
                                <td>
