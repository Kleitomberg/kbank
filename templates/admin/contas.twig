{% extends 'dashbase.twig' %}

{% block title %}Painel do admin{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Admin Dashboard</h1>

               <div class="d-flex justify-content-between align-items-center mt-5 ">
                <h3 class="text-light">Contas</h3>
                <a href="{{ path('app_agencia_criar') }}" class="btn btn-primary">Nova Conta</a>

               

               </div>
                <table class="table text-light">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Numero</th>
                            <th>Cliente</th>
                            <th>Status</th>
                            <th>Tipo</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for conta in contas %}
