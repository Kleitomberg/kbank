        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>        

          <!--SUCCESS MODAL-->
  <div class="w-full md:w-2/3 mx-auto">

    
    
    {% for message in app.flashes('success') %}

        <script>
            swal({
                title: "Sucesso!",
                text: "{{ message }}",
                icon: "success",
                button: "OK",
            });
        </script>
        
    {% endfor %}

    {% for message in app.flashes('error') %}

        <script>
            swal({
                title: "Erro!",
                text: "{{ message }}",
                icon: "error",
                button: "OK",
            });
        </script>
        
    {% endfor %}
    
</div>


